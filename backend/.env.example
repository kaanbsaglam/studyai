# ============================================
# StudyAI Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git (it's in .gitignore)

# Server
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
# For local Docker: postgresql://studyai:studyai_dev_password@localhost:5432/studyai
# Inside Docker network: postgresql://studyai:studyai_dev_password@postgres:5432/studyai
DATABASE_URL=postgresql://studyai:studyai_dev_password@localhost:5432/studyai

# Redis
# For local Docker: redis://localhost:6379
# Inside Docker network: redis://redis:6379
REDIS_URL=redis://localhost:6379

# Authentication
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=your-bucket-name

# Pinecone (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=studyai-index

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
